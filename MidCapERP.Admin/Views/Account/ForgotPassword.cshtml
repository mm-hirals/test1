@model MidCapERP.Infrastructure.Identity.Models.TokenRequest

@{
    ViewData["Title"] = "Forgot Password";
    Layout = "_LayoutLogin";
}

<div class="login-main-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="cards">
                    <div class="row main-cards">
                        <div class="col-lg-6 form-card">
                            <img src="https://themesbrand.com/velzon/html/default/assets/images/auth-one-bg.jpg" class="img-fluid">
                            <div class="login-first-overlary"></div>
                            <div class="login-logo-main">
                                <a href="/" class="login-logo">
                                    <i class="bx bx-shape-square nav_logo-icon"></i>
                                    <span class="nav_logo-name">MidCap-ERP</span>
                                </a>
                            </div>
                        </div>
                        <div class="col-lg-6 form-card">
                            <div class="form-login-right">
                                <div class="login-right-box">
                                    <div class="login-header">
                                        <h1 class="mb-3">Forgot Password?</h1>
                                    </div>
                                    <div>

                                    </div>
                                    <div class="alert alert-borderless alert-warning text-center" role="alert">
                                        Enter your email and instructions will be sent to you!
                                    </div>
                                    <form asp-action="Login">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="form-group">
                                            <label asp-for="Username" class="control-label">Email</label>
                                            <input asp-for="Username" class="form-control" />
                                            <span asp-validation-for="Username" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <input type="submit" value="Forgot Password" class="btn btn-primary login-btn" />
                                        </div>
                                        <div class="mb-2 text-center">
                                            <span class="back-title">Back to <a class="fotgot_link " href="/Account/Login">Sign In</a>  </span>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}