@model string
@{
    ViewData["Title"] = "Forgot Password";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Forgot Password</title>
    <style>
        .cell th, .cell td {


            padding: 0;
        }
    </style>
</head>
<body style="background-color: #f4f4f4; margin: 0 !important; padding: 0 !important;">
    <div style="display: none; font-size: 1px; color: #fefefe; line-height: 1px; font-family: 'Lato', Helvetica, Arial, sans-serif; max-height: 0px; max-width: 0px; opacity: 0; overflow: hidden;">
        Looks like you tried signing in a few too many times. Let's see if we can get you back into your account.
    </div>

    <table class="cell" aria-describedby="main table" border="0" style="width: 100%; border-collapse: collapse;">
        <tr>
            <td style="background-color: #2B64B0;text-align: center;">
                <table class="cell" aria-describedby="header logo table" border="0" style="max-width: 600px; margin-left: auto; margin-right: auto; width: 100%; border-collapse: collapse;">
                    <tr><th id="thLogoHeader"><span style="display:none">Logo header</span></th></tr>
                    <tr>
                        <td style="padding: 40px 10px 40px 10px;text-align: center;vertical-align: top;">
                            <a href="javascript:void(0)" target="_blank" rel="noopener" style="text-decoration:none; font-family: 'Lato', Helvetica, Arial, sans-serif; color: #ffffff; font-size: 24px;">
                                <img src="https://magnusminds.net/images/supportIcon.png" alt="Logo" class="img-responsive">
                            </a>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <td style="padding: 0px 10px 0px 10px; background-color: #2B64B0; text-align: center;">
                <table class="cell" aria-describedby="Signin table" border="0" style="max-width: 600px; margin-left: auto; margin-right: auto; width: 100%; border-collapse: collapse;">
                    <tr><th id="thTroubleHeader"><span style="display:none">trouble signing header</span></th></tr>
                    <tr>
                        <td style="vertical-align: top; text-align: center; background-color: #ffffff; padding: 40px 20px 20px 20px; border-radius: 4px 4px 0px 0px; color: #111111; font-family: 'Lato', Helvetica, Arial, sans-serif; font-size: 48px; font-weight: 400; letter-spacing: 4px; line-height: 48px;">
                            <h1 style="font-size: 48px; font-weight: 400; margin: 0;">Trouble signing in?</h1>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <td style="padding: 0px 10px 0px 10px; background-color: #f4f4f4;text-align: center;">
                <table class="cell" aria-describedby="Reset Password table" border="0" style="max-width: 600px; margin-left: auto; margin-right: auto; width: 100%; border-collapse: collapse;">
                    <tr><th id="thsResetPassword"><span style="display:none">Reset Password header</span></th></tr>
                    <tr>
                        <td style="background-color: #ffffff;text-align: left; padding: 20px 30px 40px 30px; color: #666666; font-family: 'Lato', Helvetica, Arial, sans-serif; font-size: 18px; font-weight: 400; line-height: 25px;">
                            <p style="margin: 0;">Resetting your password is easy. Just press the button below and follow the instructions. We'll have you up and running in no time. </p>
                        </td>
                    </tr>
                    <tr>
                        <td style="background-color: #ffffff;text-align: left;">
                            <table class="cell" aria-describedby="Token main table" border="0" style="width: 100%; border-collapse: collapse;">
                                <tr><th id="thTokenmain"><span style="display:none">Token header</span></th></tr>
                                <tr>
                                    <td style="background-color: #ffffff;text-align: center; padding: 20px 30px 60px 30px;">
                                        <table class="cell" aria-describedby="token table" border="0" style="margin-left: auto; margin-right: auto; border-collapse:collapse;">
                                            <tr><th id="thTokenName"><span style="display:none">Token Name</span></th></tr>
                                            <tr>
                                                <td style="text-align: center; border-radius: 3px; background-color: #2B64B0;">
                                                    <a href="@Model" target="_blank" style="font-size: 20px; font-family: Helvetica, Arial, sans-serif; color: #ffffff; text-decoration: none; padding: 15px 25px; border-radius: 2px; border: 1px solid #7c72dc; display: inline-block;cursor: pointer;">Reset Password</a>
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <th id="thCopyurl" scope="col" style="padding: 0px 10px 0px 10px;background-color: #f4f4f4;text-align: center;">
                <table class="cell" aria-describedby="Message" border="0" style="max-width: 600px; margin-left: auto; margin-right: auto; width: 100%; border-collapse: collapse;">
                    <tr><th id="urlth"><span style="display:none">copy url header</span></th></tr>
                    <!-- COPY -->
                    <tr>
                        <th id="linkth" scope="col" style="text-align: left; background-color: #ffffff; padding: 20px 30px 40px 30px; color: #666666; font-family: 'Lato', Helvetica, Arial, sans-serif; font-size: 18px; font-weight: 400; line-height: 25px;">
                            <p style="margin: 0;">If that doesn't work, copy and paste the following link in your browser: </p>
                        </th>
                    </tr>
                </table>
            </th>
        </tr>
        <tr>
            <th id="thneedhelptr" scope="col" style="padding: 30px 10px 0px 10px; background-color: #f4f4f4; text-align: center;">
                <table class="cell" aria-describedby="Footer" border="0" style="max-width: 600px; margin-left: auto; margin-right: auto; width: 100%; border-collapse: collapse;">
                    <tr><th id="thNeed"><span style="display:none">Need morehelp header</span></th></tr>
                    <tr>
                        <th id="thNeedHelp" style="background-color: #2B64B0;text-align: center; padding: 30px 30px 30px 30px; border-radius: 4px 4px 4px 4px; color: #2B64B0; font-family: 'Lato', Helvetica, Arial, sans-serif; font-size: 18px; font-weight: 400; line-height: 25px;">
                            <h2 style="font-size: 20px; font-weight: 400; color: #ffffff; margin: 0;">Need more help?</h2>
                            <p style="margin: 0; color: #ffffff;">Please contact customer care</p>
                        </th>
                    </tr>
                </table>
            </th>
        </tr>
    </table>
</body>
</html>