<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MidCapERP.Admin</title>
    <!-- Start CSS -->
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <!-- End CSS -->
</head>
<body id="body-pd">
    <!-- Start Topbar -->
    <header class="header" id="header">
        <div class="header_toggle">
            <i class="bx bx-menu" id="header-toggle"></i>
        </div>
        <div class="header_img">
            <a class="header_profile_img" href="/Account/Profile">
                <img src="https://picsum.photos/200/300?random=1" alt="User Profile" />
            </a>
        </div>
    </header>
    <!-- End Topbar -->
    <!-- Start Sidebar -->
    <div class="l-navbar collapsed" id="nav-bar">
        <nav class="nav">
            <div>
                <a href="/" class="nav_logo">
                    <i class="bx bx-shape-square nav_logo-icon"></i>
                    <span class="nav_logo-name">MidCap-ERP</span>
                </a>
                <ul class="nav_list">
                    <li class="nav-item">
                        <a href="/Dashboard" class="nav_link active">
                            <i class="bx bxs-dashboard nav_icon"></i>
                            <span class="nav_name">Dashboard</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/Product" class="nav_link">
                            <i class="bx bx-package nav_icon"></i>
                            <span class="nav_name">Products</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/Order" class="nav_link">
                            <i class="bx bx-cart-alt nav_icon"></i>
                            <span class="nav_name">Orders</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/Customer" class="nav_link">
                            <i class="bx bx-user-circle nav_icon"></i>
                            <span class="nav_name">Customers</span>
                        </a>
                    </li>
                    <li class="nav-item submenu-item">
                        <a href="javascipt:void(0)" class="nav_link submenu-link">
                            <i class="bx bx-cog nav_icon"></i>
                            <span class="nav_name">Master Settings</span>
                        </a>
                        <ul class="sub-menu">
                             <li class="nav-item">
                                 <a class="nav_link" href="/Category">
                                     Categories
                                 </a>
                             </li>
                             <li class="nav-item">
                                 <a class="nav_link" href="/Company">
                                     Companies
                                 </a>
                             </li>
                             <li class="nav-item">
                                 <a class="nav_link" href="/Unit">
                                     Units
                                 </a>
                             </li>
                             <li class="nav-item">
                                 <a class="nav_link" href="/WoodType">
                                     Wood Types
                                 </a>
                             </li>
                             <li class="nav-item">
                                 <a class="nav_link" href="/AccessoriesType">
                                     Accessories Type
                                 </a>
                             </li>
                             <li class="nav-item">
                                 <a class="nav_link" href="/Accessories">
                                     Accessories
                                 </a>
                             </li>
                             <li class="nav-item">
                                 <a class="nav_link" href="/RawMaterial">
                                     Raw Materials
                                 </a>
                             </li>
                             <li class="nav-item">
                                 <a class="nav_link" href="/Fabric">
                                     Fabrics
                                 </a>
                             </li>
                             <li class="nav-item">
                                 <a class="nav_link" href="/Polish">
                                     Polish
                                 </a>
                             </li>
                             <li class="nav-item">
                                 <a class="nav_link" href="/Wood">
                                     Woods
                                 </a>
                             </li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="nav-item">
                <a href="#" class="nav_link">
                    <i class="bx bx-log-out nav_icon"></i>
                    <span class="nav_name">SignOut</span>
                </a>
            </div>
        </nav>
    </div>
    <!-- End Sidebar -->
    <!-- Start Container Main -->
    <div class="c-main-content--wrapper">
        @RenderBody()
    </div>
    <!-- Start Container Main -->
    <!-- Start Footer -->
    <footer class="footer-page--wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6 text-start">
                    Designed &amp; Developed by <a href="https://www.magnusminds.net">MagnusMinds IT Solution</a> &copy; 2022
                </div>
                <div class="col-md-6 text-end">
                    MidCapERP.Admin.1.0.0.1
                </div>
            </div>
        </div>
    </footer>
    <!-- End Footer -->
    <!-- Start JS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- End JS -->
    <!-- Start Custom JS -->
    <script src="~/js/custom.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @await Component.InvokeAsync("NToastNotify")
    <!-- End Custom JS -->
</body>
</html>