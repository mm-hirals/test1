@model IEnumerable<MidCapERP.Dto.Category.CategoryResponseDto>
@{
    ViewData["Title"] = "Categories";
}

<div class="c-card--wrapper">
    <div class="c-card--header">
        <h4 class="c-card--header-title">Categories</h4>
        <div class="c-card--header-action">
            <a class="c-card--header-action-btn btn btn-outline-primary" id="lnkCategoryFilter"><i class='bx bx-plus me-1'></i>Filters</a>
            <a asp-controller="Category" asp-action="Create"
               class="btn btn-primary has-spinner" data-ajax="true" data-ajax-mode="replace"
               data-ajax-complete="CategoryModel.onComplete" data-ajax-update="#divUpdateCategory" id="btnCreateCategory">Create New</a>
        </div>
    </div>
    <div class="c-card--body">
        <div class="card filter-form--wrapper" id="FilterCard">
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label class="form-label">Category Name</label>
                        <input id="categoryName" type="text" class="form-control" placeholder="Category Name" />
                    </div>
                </div>
            </div>
        </div>
        <partial name="_CategoryTable" model="@Model" />
        <div id="divUpdateCategory"></div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        await Html.RenderPartialAsync("_JqueryDatatableScriptsPartial");

        <script asp-src-include="~/js/Category.js" ></script>
    }
}