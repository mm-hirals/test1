@model IEnumerable<MidCapERP.Dto.Frames.FrameResponseDto>
@{
    ViewData["Title"] = "Frames";
}

<div class="c-card--wrapper">
    <div class="c-card--header">
        <h4 class="c-card--header-title">Frames</h4>
        <div class="c-card--header-action">
            <a class="c-card--header-action-btn btn btn-outline-primary" id="lnkFrameFilter"><i class='bx bx-plus me-1'></i>Filters</a>
            <a asp-controller="Frame" asp-action="Create"
               class="btn btn-primary" data-ajax="true" data-ajax-mode="replace"
               data-ajax-complete="FrameModel.onComplete" data-ajax-update="#divUpdateFrame">Create New</a>
        </div>
    </div>
    <div class="c-card--body">
        <div class="card mb-4 p-3 filter-form--wrapper" id="FilterCard">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="form-label">Frame Name</label>
                        <input type="text" class="form-control" placeholder="Frame Name" />
                    </div>
                </div>
            </div>
        </div>
        <partial name="_FrameTable" model="@Model" />
        <div id="divUpdateFrame"></div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        await Html.RenderPartialAsync("_JqueryDatatableScriptsPartial");

        <script asp-src-include="~/js/Frame.js" ></script>
    }
    }