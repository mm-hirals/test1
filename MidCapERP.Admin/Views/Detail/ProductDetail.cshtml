@model MidCapERP.Dto.Product.ProductDetailResponseDto

@{
    Layout = "_LayoutAnonymous";
    ViewData["Title"] = "Product Detail";
}

<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/Swiper/6.8.4/swiper-bundle.min.css">

@if (Model != null)
{
    <div class="product-details-wrapper mb-2">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="c-card--wrapper p-2 mb-3 tenant-top--wrapper">
                        <div class="row">
                            <div class="col-xl-5 col-lg-6 col-md-7 col-sm-12">
                                <div class="organization-main-details">
                                    <div class="organization-img--wrapper">
                                        <img src="@Model.TenantResponseDto.LogoPath" class="organization-logo">
                                    </div>
                                    <div class="ms-3 organization-detail--wrapper">
                                        <span class="organaization-text ps-0 text-sm-center text-center text-md-start">@Model.TenantResponseDto.TenantName</span>
                                        <div class="align-items-center d-none d-md-flex">
                                            <span class="email-text"><i class='bx bx-envelope'></i></span>
                                            <span class="organaization-span">@Model.TenantResponseDto.EmailId</span>
                                        </div>
                                        <div class="align-items-center d-none d-md-flex">                                            
                                            <span class="email-text"><i class='bx bx-phone'></i></span>
                                            <span class="organaization-span">@Model.TenantResponseDto.PhoneNumber</span>
                                        </div>
                                    </div>

                                </div>
                            </div>

                            <div class="col-xl-7 col-lg-6 col-md-5 col-sm-12 d-flex justify-content-end align-items-center">
                                <div class="product-details-title d-sm-none d-md-block d-none">
                                    <span class="ps-0 d-flex">
                                        <i class='bx bxs-map'></i>
                                        <span class="organization-address">
                                            @Model.TenantResponseDto.StreetAddress1 , @Model.TenantResponseDto.StreetAddress2 <br> @Model.TenantResponseDto.Landmark
                                            @Model.TenantResponseDto.City,<br> @Model.TenantResponseDto.State, @Model.TenantResponseDto.Pincode
                                        </span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="c-card--wrapper p-3 mb-3">
                        <div class="row mb-4">
                            <div class="col-lg-6 col-md-12 col-sm-12">
                                <div class="view-product-main">
                                    <div class="gallery">
                                        <div class="swiper-container gallery-slider">
                                            <div class="swiper-wrapper">
                                                @foreach (var item in Model.ProductImageResponseDto)
                                                {
                                                    <div class="swiper-slide"><img src="@item.ImagePath" alt="@item.ImageName"></div>
                                                }
                                            </div>
                                            <div class="swiper-button-prev"></div>
                                            <div class="swiper-button-next"></div>
                                        </div>
                                        <div class="swiper-container gallery-thumbs">
                                            <div class="swiper-wrapper">
                                                @foreach (var item in Model.ProductImageResponseDto)
                                                {
                                                    <div class="swiper-slide"><img src="@item.ImagePath" alt="@item.ImageName"></div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-12 col-sm-12 mt-lg-0 mt-md-5 mt-sm-5 mt-5">
                                <div class="view-product-mian">
                                    <div class="product-details ">
                                        <div class="product-name--wrapper">
                                            <h2 class="product-name">@Model.ProductTitle</h2>
                                            <p class="model-label">Model No. <span class="model-number">@Model.ModelNo</span></p>
                                        </div>
                                        <span class="product-price">₹ @Math.Round(Model.RetailerPrice, 2) /-</span>

                                    </div>
                                    <div class="main-product-details c-card--wrapper">
                                        <div class="c-card--header">
                                            <h2 class="c-card--header-title text-primary">Product Details</h2>
                                        </div>
                                        <div class="c-card--body p-0">
                                            <ul class="product-details-list mb-0">
                                                <li class="product-deatils-sublist">
                                                    <span class="product-deatails-name">Product Dimensions</span>
                                                    <span class="product-details-value">@Model.Width x @Model.Height x @Model.Depth</span>
                                                </li>
                                                <li class="product-deatils-sublist">
                                                    <span class="product-deatails-name">Total days to prepare </span>
                                                    <span class="product-details-value">@Model.TotalDaysToPrepare days</span>
                                                </li>
                                                <li class="product-deatils-sublist">
                                                    <span class="product-deatails-name">Fabric Needed</span>
                                                    <span class="product-details-value">@Model.FabricNeeded meter</span>
                                                </li>
                                                <li class="product-deatils-sublist">
                                                    <span class="product-deatails-name">Features</span>
                                                    <span class="product-details-value">@Model.Features</span>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row d-md-none d-sm-block">
                        <div class="col-12">
                            <div class="c-card--wrapper c-card-sm--wrapper">
                                <div class="c-card--header">
                                    <h4 class="c-card--header-title">Contact Details</h4>
                                </div>
                                <div class="c-card--body">
                                    <input asp-for="TenantResponseDto.TenantId" hidden />
                                    <div class="align-items-center d-flex mb-1">
                                        <span class="organaization-text ps-0 text-sm-center text-center text-md-start fw-bold">@Model.TenantResponseDto.TenantName</span>
                                    </div>
                                    <div class="organization-main-details d-md-none d-sm-block justify-content-start">
                                        <span class="d-flex align-items-start mb-1">
                                            <i class='bx bxs-map pe-1'></i>
                                            <span class="organaization-span ps-0">
                                                @Model.TenantResponseDto.StreetAddress1 , @Model.TenantResponseDto.StreetAddress2 <br> @Model.TenantResponseDto.Landmark
                                                @Model.TenantResponseDto.City,<br> @Model.TenantResponseDto.State, @Model.TenantResponseDto.Pincode
                                            </span>
                                        </span>
                                    </div>
                                    <div class="organization-main-details justify-content-start">
                                        <div class="align-items-center d-flex mb-1">
                                            <span class="email-text"><i class='bx bx-envelope'></i></span>
                                            <span class="organaization-span">@Model.TenantResponseDto.EmailId</span>
                                        </div>
                                    </div>
                                    <div class="organization-main-details justify-content-start">
                                        <div class="align-items-center d-flex">
                                            <span class="email-text"><i class='bx bx-phone'></i></span>
                                            <span class="organaization-span">@Model.TenantResponseDto.PhoneNumber</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


<script src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/6.8.4/swiper-bundle.min.js"></script>
<script type="text/javascript">
    var slider = new Swiper(".gallery-slider", {
        slidesPerView: 1,
        centeredSlides: true,
        loop: true,
        loopedSlides: 6,
        navigation: {
            nextEl: ".swiper-button-next",
            prevEl: ".swiper-button-prev"
        }
    });


    var thumbs = new Swiper(".gallery-thumbs", {
        slidesPerView: "auto",
        spaceBetween: 10,
        centeredSlides: true,
        loop: true,
        slideToClickedSlide: true
    });

    slider.controller.control = thumbs;
    thumbs.controller.control = slider;
</script>
