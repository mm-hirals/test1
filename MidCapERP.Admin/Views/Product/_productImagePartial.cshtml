@model MidCapERP.Dto.Product.ProductMainRequestDto

<form asp-controller="Product" method="post" class="modal-form--wrapper formAction" enctype="multipart/form-data">
    <div class="c-card--wrapper c-card-sm--wrapper mb-3">
        <input type="hidden" asp-for="ProductId" class="form-control productId" />
        <div class="c-card--header">
            <h4 class="c-card--header-title">Product Images</h4>
        </div>
        <div class="c-card--body">
            @*            <div id="dropzone" id="dropzone-form" name="mainFileUploader">
            <div class="dropzone needsclick" action="/upload">
            <div class="dz-message needsclick">
            Drop files here or click to upload.
            <br>
            <span class="note needsclick">
            (This is just a demo dropzone. Selected
            files are <strong>not</strong> actually uploaded.)
            </span>
            </div>
            </div>
            </div>*@
            <div class="dropzone" id="productImagesDropZone" name="mainFileUploader">
                <div class="fallback">
                    <input asp-for="Files" type="file" multiple />
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-12">
                    <div class="d-flex">
                        @if (@Model.ProductId > 0)
                        {
                            @foreach (var item in @Model.ProductImageRequestDto)
                            {
                                <input type="hidden" asp-for="@item.ProductImageID" value="@item.ImagePath" />
                                <div class="me-2 c-width-120 img-thumbnail d-flex align-items-center img-wrap">
                                    <span class="close">&times;</span>
                                    <img src="@item.ImagePath" width="100%" height="100%" class="img-thumbnail p-0 border-0" data-imageId="@item.ProductImageID">
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row c-card-footer--btn">
        <div class="col-12">
            <div class="c-card--wrapper c-card-sm--wrapper">
                <div class="c-card--footer">
                    <a class="btn btn-danger" asp-action="Index" asp-controller="Product">
                        Cancel
                    </a>
                    <input class="btn btn-primary ms-2" id="submit-all" type="button" value="Save" />
                </div>
            </div>
        </div>
    </div>
</form>

<script src="~/lib/dropzone/dropzone.js"></script>
<script src="~/js/ProductImage.js" asp-append-version="true"></script>