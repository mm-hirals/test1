        @*Product*@
        <div class="card-product--wrapper mb-3">
            <input type="hidden" asp-for="ProductRequestDto.ProductId" />
            <div class="card-product--image">
                <input type="file" hidden />
                <div class="product--image">
                    <img src="~/images/round-chair.jpg" alt="Product Name" />
                    <div class="edit--image">
                        <i class="bx bx-pencil"></i>
                    </div>
                </div>
            </div>
            <div class="card-prpoduct-cotent--wrapper">
                <div class="row">
                    <div class="col-md-3">
                        <div class="product-info--item">
                            <div class="form-group">
                                <label asp-for="ProductRequestDto.CategoryId" class="form-label"></label>
                                <select asp-for="ProductRequestDto.CategoryId" data-val="true" class="form-control"
                                        asp-items="@(new SelectList((List<SelectListItem>)ViewBag.CategorySelectedList, "Value", "Text"))">
                                    <option value="" hidden disabled selected>Select Category</option>
                                </select>
                                <span asp-validation-for="ProductRequestDto.CategoryId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="product-info--item">
                            <div class="form-group">
                                <label asp-for="ProductRequestDto.ProductTitle" class="form-label"></label>&nbsp;<span class="required">*</span>
                                <input asp-for="ProductRequestDto.ProductTitle" type="text" class="form-control" placeholder="Product Title">
                                <span asp-validation-for="ProductRequestDto.ProductTitle" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="product-info--item">
                            <div class="form-group">
                                <label asp-for="ProductRequestDto.ModelNo" class="form-label"></label>&nbsp;<span class="required">*</span>
                                <input asp-for="ProductRequestDto.ModelNo" type="text" class="form-control" placeholder="Product Code">
                                <span asp-validation-for="ProductRequestDto.ModelNo" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
