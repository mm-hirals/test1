                                <div class="row">
                                    <div class="col-md-4">
                                        <input asp-for="ProductRequestDto.Width" type="text" class="form-control" placeholder="Width">
                                        <span asp-validation-for="ProductRequestDto.Width" class="text-danger"></span>
