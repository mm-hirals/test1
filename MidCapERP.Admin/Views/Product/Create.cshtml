<div class="">
    <div class="card-product--wrapper mb-3">
        <div class="card-product--image">
            <input type="file" hidden />
            <div class="product--image">
                <img src="~/images/round-chair.jpg" alt="Product Name" />
                <div class="edit--image">
                    <i class="bx bx-pencil"></i>
                </div>
            </div>
        </div>
        <div class="card-prpoduct-cotent--wrapper">
            <div class="row">
                <div class="col-md-3">
                    <div class="product-info--item">
                        <div class="form-group">
                            <label asp-for="CategoryId" class="form-label" >
                                Product Category <span class="required">*</span>
                            </label>
                            <select asp-for="CategoryId" data-val="true" class="form-control"
                                        asp-items="@(new SelectList((List<SelectListItem>)ViewBag.CategorySelectedList, "Value", "Text"))">
                                    <option value="" hidden disabled selected>Select Category</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="product-info--item">
                        <div class="form-group">
                            <label class="form-label">
                                Product Title <span class="required">*</span>
                            </label>
                            <input asp-for="ProductTitle" type="text" class="form-control" placeholder="Product Title">
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="product-info--item">
                        <div class="form-group">
                            <label class="form-label">
                                Model No <span class="required">*</span>
                            </label>
                            <input type="text" class="form-control" placeholder="Product Code">
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="product-info--item">
                        <div class="form-group">
                            <label class="form-label">
                                Product Demensions <span class="required">*</span> <span class="dimension-input">(Width &#x2715; Height &#x2715; Depth)</span>
                            </label>
                            <div class="row">
                                <div class="col-md-4">
                                    <input asp-for="Width" type="text" class="form-control" placeholder="Width">
                                    @*<label class="form-label">Width</label>*@
                                </div>
                                <div class="col-md-4">
                                    <input asp-for="Height" type="text" class="form-control" placeholder="Height">
                                    @*<label class="form-label">Height</label>*@
                                </div>
                                <div class="col-md-4">
                                    <input asp-for="Depth" type="text" class="form-control" placeholder="Depth">
                                    @*<label class="form-label">Depth</label>*@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @* <div class="product-info--wrapper">
            </div>*@
