@model List<MidCapERP.Dto.Product.ProductResponseDto>

@{
    Layout = null;
    int counter = 0;
}
<table style="width: 800px;margin: auto;font-family: 'Nunito', sans-serif;" cellpadding="0" cellspacing="10">
    <tbody>
        @if (counter % 3 == 0)
        {
            @Html.Raw("<tr>")
        }
        @foreach (var item in @Model)
        {
        <td style="max-width: 380px;width: 380px;">
            <table style="width: 100%; page-break-inside:auto;padding: 10px;border: 2px dashed #242424;border-radius: 10px;margin-bottom: 25px;">
                <tr style="page-break-inside:avoid; page-break-after:auto;">
                    <td style="text-align: center;page-break-inside:avoid; page-break-after:auto;">
                        <div>
                            <div style="display:block;font-size: 22px;font-weight: 700;color: #000000;width: 100px; height: 100px;float: left;margin-bottom: 10px;">
                                <img src="" style="width 100px;height: 100px;border-radius 10px;overflow: hidden;" />
                            </div>
                            <div style="width: 160px;float: right;text-align: left;">
                                <div style="display:block;font-size: 16px;color: #2c2c2c;height: 65px;font-weight: 600;">
                                        @item.ProductTitle
                                </div>
                                <div style="display: inline-block;background: #efefef;padding: 5px;border-radius: 5px;padding: 8px;font-size: 16px;font-weight: 600;">
                                        @item.ModelNo
                                </div>
                            </div>
                        </div>
                        <div style="background: #4b49ac;padding: 10px;border-radius: 10px;display: table;margin: 15px auto 0;">
                            <img height='250px' width='250px' src="@item.QRImage" />
                        </div>
                    </td>
                </tr>
            </table>
        </td>
            { counter++; }
            @if (counter % 3 == 0)
            {
                @Html.Raw("</tr>")
            }
        }
    </tbody>
</table>