@model List<MidCapERP.Dto.Product.ProductResponseDto>

@{
    Layout = null;
    int counter = 0;
}

<!DOCTYPE html>
<html>
<head>
    <style>
        @@media screen {
            .page {
                page-break-before: always !important;
            }
        }
    </style>
</head>
<body>
    <div style="width: 1000px;margin: auto;font-family: 'Nunito', sans-serif;">
        @foreach (var item in @Model)
        {
            if (counter % 9 == 0)
            {
                @Html.Raw("<div class='page'>")
            }
            <div style="max-width: 320px;width: 320px;display: inline-block; margin: 5px;">
                <div style="padding: 10px;border: 2px dashed #c9c9c9;background: #150f00;">
                    <div style="text-align: center;">
                        <div>
                            <div style="color: #000000;height: 80px;margin: 0 auto 5px;padding-bottom: 5px;">
                                <img src="@item.TenantLogo" style="vertical-align: middle;object-fit: contain;height: 80px;">
                            </div>
                            <div style="display: table;margin: auto; text-align: center;font-size: 16px;color: #ffffff;font-weight: 600;height: 42px;overflow: hidden;border-bottom: 1px solid #efefef;margin-bottom: 5px;">
                                <div style="display: table-cell;vertical-align: middle;">
                                    @item.ProductTitle
                                </div>
                            </div>
                        </div>
                        <div style="display: table;margin: 0 auto;background: #fff;border-radius: 10px;">
                            <img height="260px" width="260px" src="@item.QRImage" style="object-fit: contain;">
                        </div>                        
                        <div style="display: block;padding: 5px;border-radius: 5px;padding: 8px;font-size: 16px;text-align: center;color: #fff7a6;">
                            @item.ModelNo
                        </div>
                    </div>
                </div>
            </div>
            { counter++; }
            @if (counter % 9 == 0)
            {
                @Html.Raw("</div>")
            }
        }
    </div>
</body>
</html>