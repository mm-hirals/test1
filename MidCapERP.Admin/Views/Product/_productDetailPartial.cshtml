@model MidCapERP.Dto.Product.ProductRequestDto
@{
    string action = (Model != null && Model.ProductId != 0) ? "Update" : "Create";
}

<form asp-action="@action" asp-controller="Product" method="post" class="modal-form--wrapper formAction" enctype="multipart/form-data">
    <div class="c-card--wrapper c-card-sm--wrapper mb-3">
        <div class="c-card--header">
            <h4 class="c-card--header-title">Product Detail</h4>
        </div>
        <div class="c-card--body">
            <div class="row">
                <div class="col-md-10">
                    <div class="row">
                        <div class="col-3">
                            <div class="form-group">
                                <label asp-for="UsedFabric" class="form-label"></label>
                                <input asp-for="UsedFabric" type="number" class="form-control fabric" placeholder="Fabric in meter">
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="form-group">
                                <label asp-for="TotalDaysToPrepare" class="form-label"></label>&nbsp;<span class="required">*</span>
                                <input asp-for="TotalDaysToPrepare" type="number" class="form-control" placeholder="Total days to prepare">
                                <span asp-validation-for="TotalDaysToPrepare" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="custom-control custom-switch">
                                <label asp-for="IsVisibleToWholesalers" class="form-label"></label>
                                <input asp-for="IsVisibleToWholesalers" type="checkbox" class="custom-control-input" id="customSwitch1">
                                <label class="custom-control-label" for="customSwitch1">Active</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="product-info--item">
                                <div class="form-group">
                                    <label asp-for="Features" class="form-label"></label>
                                    <textarea asp-for="Features" class="form-control" placeholder="Features"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="product-info--item">
                                <div class="form-group">
                                    <label asp-for="Comments" class="form-label"></label>
                                    <textarea asp-for="Comments" class="form-control" placeholder="Comments"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-2">
                    <div class="product-info--item">
                        <div class="form-group">
                            <label asp-for="QRImage" class="form-label"></label>
                            <div class="product--image">
                                <img src="~/images/qr-code.png" alt="Product Name" class="w-100"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row c-card-footer--btn">
        <div class="col-12">
            <div class="c-card--wrapper c-card-sm--wrapper">
                <div class="c-card--footer">
                    <a class="btn btn-danger" asp-action="Index" asp-controller="Product">
                        Cancel
                    </a>
                    <input type="submit" value="Save" class="btn btn-primary ms-2" />
                </div>
            </div>
        </div>
    </div>
</form>