@model MidCapERP.Dto.Tenant.TenantResponseDto

<div class="c-card--wrapper c-card-sm--wrapper mb-0">
    <form asp-action="UpdateTenant" asp-controller="Profile" method="post" enctype="multipart/form-data" id="frmProfile">
        <div class="c-card--body  p-0">
            <div class="row">
                <div class="col-md-12">
                    <div class="c-card--wrapper c-card-sm--wrapper mb-0">
                        <div class="c-card--header">
                            <h4 class="c-card--header-title">Organization Details</h4>
                        </div>
                        <div class="c-card--body">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="row">
                                        <input asp-for="TenantId" hidden class="form-control" />
                                        <div class="col-3">
                                            <div class="form-group">
                                                <label asp-for="TenantName" class="form-label"></label><span class="required">*</span>
                                                <input asp-for="TenantName" type="text" class="form-control" placeholder="Tenant Name">
                                                <span asp-validation-for="TenantName" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-3">
                                            <div class="form-group">
                                                <label asp-for="FirstName" class="form-label"></label><span class="required">*</span>
                                                <input asp-for="FirstName" type="text" class="form-control fabric" placeholder="FirstName">
                                                <span asp-validation-for="FirstName" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-3">
                                            <div class="form-group">
                                                <label asp-for="LastName" class="form-label"></label><span class="required">*</span>
                                                <input asp-for="LastName" type="text" class="form-control" placeholder="LastName">
                                                <span asp-validation-for="LastName" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-3">
                                            <div class="form-group">
                                                <label asp-for="EmailId" class="form-label"></label><span class="required">*</span>
                                                <input asp-for="EmailId" type="text" class="form-control fabric" placeholder="EmailId">
                                                <span asp-validation-for="EmailId" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-3">
                                            <div class="form-group">
                                                <label asp-for="PhoneNumber" class="form-label"></label><span class="required">*</span>
                                                <input asp-for="PhoneNumber" type="number" class="form-control" placeholder="Phonetext">
                                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-3">
                                            <div class="form-group">
                                                <label asp-for="LogoPath" class="form-label"></label>
                                                <input type="file" asp-for="UploadImage" class="form-control" />
                                                <div>
                                                    <img src="@Model.LogoPath" width="120" height="120" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-3">
                                            <div class="form-group">
                                                <label asp-for="GSTNo" class="form-label"></label><span class="required">*</span>
                                                <input asp-for="GSTNo" type="number" class="form-control" placeholder="GST No">
                                                <span asp-validation-for="GSTNo" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-3">
                                            <div class="form-group">
                                                <label class="form-label">Send OTP</label>
                                                <div class="custom-control custom-switch">
                                                    <input asp-for="SendOTP" type="checkbox" class="custom-control-input" id="isDefaultSendOTP" data-val="true">
                                                    <label class="custom-control-label" for="isDefaultSendOTP">Active</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="c-card--wrapper c-card-sm--wrapper mb-0">
                        <div class="c-card--header">
                            <h4 class="c-card--header-title">Address Details</h4>
                        </div>
                        <div class="c-card--body">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="row">
                                        <div class="col-3">
                                            <div class="form-group">
                                                <label asp-for="StreetAddress1" class="form-label"></label>
                                                <input asp-for="StreetAddress1" type="text" class="form-control" placeholder="StreetAddress1">
                                            </div>
                                        </div>
                                        <div class="col-3">
                                            <div class="form-group">
                                                <label asp-for="StreetAddress2" class="form-label"></label>
                                                <input asp-for="StreetAddress2" type="text" class="form-control fabric" placeholder="StreetAddress2">
                                            </div>
                                        </div>
                                        <div class="col-3">
                                            <div class="form-group">
                                                <label asp-for="Landmark" class="form-label"></label>
                                                <input asp-for="Landmark" type="text" class="form-control" placeholder="Landmark">
                                            </div>
                                        </div>
                                        <div class="col-3">
                                            <div class="form-group">
                                                <label asp-for="City" class="form-label"></label>
                                                <input asp-for="City" type="text" class="form-control" placeholder="City">
                                            </div>
                                        </div>
                                        <div class="col-3">
                                            <div class="form-group">
                                                <label asp-for="State" class="form-label"></label>
                                                <input asp-for="State" type="text" class="form-control fabric" placeholder="State">
                                            </div>
                                        </div>
                                        <div class="col-3">
                                            <div class="form-group">
                                                <label asp-for="Pincode" class="form-label"></label>
                                                <input asp-for="Pincode" type="number" class="form-control" placeholder="Pincode">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="c-card--wrapper c-card-sm--wrapper mb-0">
                        <div class="c-card--header">
                            <h4 class="c-card--header-title">Other Configurations</h4>
                        </div>
                        <div class="c-card--body">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="row">
                                        <div class="col-3">
                                            <div class="form-group">
                                                <label asp-for="ProductRSPPercentage" class="form-label"></label>
                                                <input asp-for="ProductRSPPercentage" type="number" class="form-control" min="0" max="999.99" placeholder="Product Retailer SP %">
                                                <span asp-validation-for="ProductRSPPercentage" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-3">
                                            <div class="form-group">
                                                <label asp-for="ProductWSPPercentage" class="form-label"></label>
                                                <input asp-for="ProductWSPPercentage" type="number" class="form-control" min="0" max="999.99" placeholder="Product WholeSaler SP %">
                                                <span asp-validation-for="ProductWSPPercentage" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-3">
                                            <div class="form-group">
                                                <label asp-for="FabricRSPPercentage" class="form-label"></label>
                                                <input asp-for="FabricRSPPercentage" type="number" class="form-control" min="0" max="999.99" placeholder="Fabric Retailer SP %">
                                                <span asp-validation-for="FabricRSPPercentage" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-3">
                                            <div class="form-group">
                                                <label asp-for="FabricWSPPercentage" class="form-label"></label>
                                                <input asp-for="FabricWSPPercentage" type="number" class="form-control" min="0" max="999.99" placeholder="Fabric WholeSaler SP %">
                                                <span asp-validation-for="FabricWSPPercentage" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-3">
                                            <div class="form-group">
                                                <label asp-for="ArchitectDiscount" class="form-label"></label>
                                                <input asp-for="ArchitectDiscount" type="number" class="form-control" min="0" max="100" placeholder="Interior Discount %">
                                                <span asp-validation-for="ArchitectDiscount" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-3">
                                            <div class="form-group">
                                                <label asp-for="AmountRoundMultiple" class="form-label"></label>
                                                <input asp-for="AmountRoundMultiple" type="number" class="form-control" min="0" placeholder="Amount Rounding off Multiple">
                                                <span asp-validation-for="AmountRoundMultiple" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="c-card--wrapper c-card-sm--wrapper mb-0">
                        <div class="c-card--header">
                            <h4 class="c-card--header-title">SMTP Configurations</h4>
                        </div>
                        <div class="c-card--body">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="row">
                                        <input asp-for="@Model.tenantSMTPDetailResponseDto.TenantSMTPDetailId" hidden class="form-control" />
                                        <div class="col-3">
                                            <div class="form-group">
                                                <label asp-for="@Model.tenantSMTPDetailResponseDto.SMTPServer" class="form-label"></label>
                                                <input asp-for="@Model.tenantSMTPDetailResponseDto.SMTPServer" type="text" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-3">
                                            <div class="form-group">
                                                <label asp-for="@Model.tenantSMTPDetailResponseDto.Username" class="form-label"></label>
                                                <input asp-for="@Model.tenantSMTPDetailResponseDto.Username" type="text" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-3">
                                            <div class="form-group">
                                                <label asp-for="@Model.tenantSMTPDetailResponseDto.SMTPPort" class="form-label"></label>
                                                <input asp-for="@Model.tenantSMTPDetailResponseDto.SMTPPort" type="text" class="form-control fabric">
                                            </div>
                                        </div>
                                        <div class="col-3">
                                            <div class="form-group">
                                                <label asp-for="@Model.tenantSMTPDetailResponseDto.FromEmail" class="form-label"></label>
                                                <input asp-for="@Model.tenantSMTPDetailResponseDto.FromEmail" type="text" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-3">
                                            <div class="form-group">
                                                <label asp-for="@Model.tenantSMTPDetailResponseDto.Password" class="form-label"></label>
                                                <input asp-for="@Model.tenantSMTPDetailResponseDto.Password" type="text" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-3">
                                            <div class="form-group">
                                                <label class="form-label">Enable SSL</label>
                                                <div class="custom-control custom-switch">
                                                    <input asp-for="tenantSMTPDetailResponseDto.EnableSSL" type="checkbox" class="custom-control-input" id="isDefaultCheckTenant" data-val="true">
                                                    <label class="custom-control-label" for="isDefaultCheckTenant">Active</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row c-card-footer--btn">
                <div class="col-12">
                    <div class="c-card--wrapper c-card-sm--wrapper">
                        <div class="c-card--footer">
                            <a class="btn btn-danger" asp-action="Index" asp-controller="Dashboard">
                                Cancel
                            </a>
                            <button type="submit" value="Save" class="btn btn-primary has-spinner ms-2" id="btnUpdateProfile">Save</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        <script asp-src-include="~/js/Profile.js"></script>
    }
    }