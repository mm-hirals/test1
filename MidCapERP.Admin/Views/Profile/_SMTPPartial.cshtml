@model MidCapERP.Dto.TenantSMTPDetail.TenantSMTPDetailResponseDto

<div class="row">
	<div class="col-md-12">
		<div class="c-card--wrapper c-card-sm--wrapper mb-0">
			<form asp-action="UpdateTenantSMTPDetail" asp-controller="Profile" method="post">
				<div class="c-card--header">
					<h4 class="c-card--header-title">SMTP Server</h4>
				</div>
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<input asp-for="TenantSMTPDetailId" hidden class="form-control" />
				<input asp-for="TenantID" hidden class="form-control" />
				<div class="c-card--body">
					<div class="row">
						<div class="col-md-12">
							<div class="row">
								<div class="col-3">
									<div class="form-group">
										<label asp-for="SMTPServer" class="form-label"></label>
										<input asp-for="SMTPServer" type="text" class="form-control">
									</div>
								</div>
								<div class="col-3">
									<div class="form-group">
										<label asp-for="Username" class="form-label"></label>
										<input asp-for="Username" type="text" class="form-control">
									</div>
								</div>
								<div class="col-3">
									<div class="form-group">
										<label asp-for="SMTPPort" class="form-label"></label>
										<input asp-for="SMTPPort" type="text" class="form-control fabric">
									</div>
								</div>
								<div class="col-3">
									<div class="form-group">
										<label asp-for="FromEmail" class="form-label"></label>
										<input asp-for="FromEmail" type="text" class="form-control">
									</div>
								</div>
								<div class="col-3">
									<div class="form-group">
										<label asp-for="Password" class="form-label"></label>
										<input asp-for="Password" type="text" class="form-control">
									</div>
								</div>
								<div class="col-3">
									<div class="custom-control custom-switch">
										<label class="form-label">
											EnableSSL
										</label>
										<input asp-for="EnableSSL" type="checkbox" class="custom-control-input" id="isDefualtCheck" data-val="true">
										<label class="custom-control-label" for="isDefualtCheck">Active</label>
									</div>
								</div>
							</div>
						</div>
						<div class="row c-card-footer--btn">
							<div class="col-12">
								<div class="c-card--wrapper c-card-sm--wrapper">
									<div class="c-card--footer">
										<a class="btn btn-danger" asp-action="Index" asp-controller="Dashboard">
											Cancel
										</a>
										<input type="submit" value="Save" class="btn btn-primary ms-2" />
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>



@section Scripts {
	@{
		<script asp-src-include="~/js/Profile.js"></script>
	}
	}

