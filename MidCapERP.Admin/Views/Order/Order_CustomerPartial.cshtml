@model MidCapERP.Dto.Customers.CustomersRequestDto

<div class="row">
    <div class="col-md-12">
        <div class="c-card--wrapper c-card-sm--wrapper price-card--wrapper">
            <input asp-for="CustomerId" type="hidden" />
            <div class="c-card--header">
                <h4 class="c-card--header-title">Customer Details</h4>
            </div>
            <div class="c-card--body">
                <ul class="list-unstyled mb-0 vstack gap-2">
                    <li>
                        <div class="d-flex align-items-center">
                            <label class="form-label customer-details-label">Name: </label>
                            <div class="flex-grow-1">
                                <h6 class="fs-14 mb-1">
                                    @{
                                        var name = @Model.FirstName + " " + @Model.LastName;
                                    }
                                    @name
                                </h6>
                            </div>
                        </div>
                    </li>
                    <li>
                        <div class="d-flex align-items-center">
                            <label class="form-label customer-details-label">Reffered By: </label>
                            <div class="flex-grow-1">
                                <h6 class="fs-14 mb-1">
                                    @{
                                        var referredbyName = @Model.FirstName + " " + @Model.LastName;
                                    }
                                    @referredbyName
                                </h6>
                            </div>
                        </div>
                    </li>
                    <li><label class="form-label customer-details-label">Mobile:</label> <i class="ri-phone-line align-middle text-muted fs-16"></i>@Model.PhoneNumber</li>
                    @if (@Model.EmailId != null)
                    {
                        <li><label class="form-label customer-details-label">Email:</label> <i class="ri-mail-line align-middle text-muted fs-16"></i>@Model.EmailId</li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>

