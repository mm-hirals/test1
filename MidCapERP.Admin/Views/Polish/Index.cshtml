@model IEnumerable<MidCapERP.Dto.Polish.PolishResponseDto>

@{
    ViewData["Title"] = "Polish";
}

<div class="c-card--wrapper">
    <div class="c-card--header">
        <h4 class="c-card--header-title">Polish</h4>
        <div class="c-card--header-action">
            <a class="c-card--header-action-btn btn btn-outline-primary" id="lnkPolishFilter"><i class='bx bx-plus me-1'></i>Filters</a>
            <a asp-controller="Polish" asp-action="Create"
               class="btn btn-primary" data-ajax="true" data-ajax-mode="replace"
               data-ajax-complete="PolishModel.onComplete" data-ajax-update="#divUpdatePolish">Create New</a>
        </div>
    </div>
    <div class="c-card--body">
        <div class="card filter-form--wrapper" id="FilterCard">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="form-label">Title</label>
                        <input type="text" class="form-control" placeholder="Title" />
                    </div>
                </div>
            </div>
        </div>
        <partial name="_PolishTable" model="@Model" />
        <div id="divUpdatePolish"></div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        await Html.RenderPartialAsync("_JqueryDatatableScriptsPartial");

        <script asp-src-include="~/js/Polish.js" ></script>
    }
}