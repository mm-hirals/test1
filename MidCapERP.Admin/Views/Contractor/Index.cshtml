@model IEnumerable<MidCapERP.Dto.Contractors.ContractorsResponseDto>
@{
    ViewData["Title"] = "Contractors";
}

<div class="c-card--wrapper">
    <div class="c-card--header">
        <h4 class="c-card--header-title">Contractors</h4>
        <div class="c-card--header-action">
            <a class="c-card--header-action-btn btn btn-outline-primary" id="lnkContractorFilter"><i class='bx bx-plus me-2'></i>Filters</a>
            <a asp-controller="Contractor" asp-action="Create"
               class="btn btn-primary" data-ajax="true" data-ajax-mode="replace"
               data-ajax-complete="ContractorModel.onComplete" data-ajax-update="#divUpdateContractor">Create New</a>
        </div>
    </div>
    <div class="c-card--body">
        <div class="card mb-4 p-3 filter-form--wrapper" id="FilterCard">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="form-label">Contractor Name</label>
                        <input type="text" class="form-control" placeholder="ContractorName" />
                    </div>
                </div>
            </div>
        </div>
        <partial name="_ContractorTable" model="@Model" />
        <div id="divUpdateContractor"></div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        await Html.RenderPartialAsync("_JqueryDatatableScriptsPartial");

        <script asp-src-include="~/js/Contractor.js" ></script>
    }
}