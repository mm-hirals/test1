@model IEnumerable<MidCapERP.Dto.Contractors.ContractorsResponseDto>

@{
    ViewData["Title"] = "Contractor";
}

<div class="c-card--wrapper">
    <div class="c-card--header">
        <h4 class="c-card--header-title">Contractor</h4>
        <div class="c-card--header-action">
            <a class="c-card--header-action-btn btn btn-outline-primary"><i class='bx bx-plus me-2'></i>Filters</a>
            <a asp-controller="Contractor" asp-action="Create"
               data-ajax-complete="onComplete" data-ajax="true" class="btn btn-primary"
               data-ajax-mode="replace" data-ajax-update="#UpdateContentDiv">Create New</a>
        </div>
    </div>
    <div class="c-card--body" id="UpdateContentDiv1">
        <partial name="_ContractorTable" model="@Model" />
        <div id="UpdateContentDiv">
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        await Html.RenderPartialAsync("_JqueryDatatableScriptsPartial");
    }

    <script>
        $(function() {
            $("#tblContractor").DataTable({
                "searching": false
            });
        });

        function onComplete() {
            $("#exampleModal").modal('show');
        }
    </script>
}