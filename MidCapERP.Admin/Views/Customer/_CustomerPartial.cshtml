                        <div class="col-12">
                            <div class="form-group">
                                <label asp-for="ShippingArea" class="form-label"></label>
                                <input asp-for="ShippingArea" class="form-control" />
                                <span asp-validation-for="ShippingArea" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group">
                                <label asp-for="ShippingCity" class="form-label"></label>
                                <input asp-for="ShippingCity" class="form-control" />
                                <span asp-validation-for="ShippingCity" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group">
                                <label asp-for="ShippingState" class="form-label"></label>
                                <input asp-for="ShippingState" class="form-control" />
                                <span asp-validation-for="ShippingState" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group">
                                <label asp-for="ShippingZipCode" class="form-label"></label>
                                <input asp-for="ShippingZipCode" class="form-control" />
                                <span asp-validation-for="ShippingZipCode" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer justify-content-between">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>

@{
    await Html.RenderPartialAsync("_ValidatejQueryUnobtrusive");
}