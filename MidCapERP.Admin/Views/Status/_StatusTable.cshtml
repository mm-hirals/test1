@model IEnumerable<MidCapERP.Dto.Status.StatusResponseDto>
<table class="table" id="tblStatus">
    <thead>
        <tr>
             <th>@Html.DisplayNameFor(model => model.StatusTitle)</th>
             <th>@Html.DisplayNameFor(model => model.StatusDescription)</th>
             <th>@Html.DisplayNameFor(model => model.StatusOrder)</th>
             <th>@Html.DisplayNameFor(model => model.IsCompleted)</th>
            <th>@Html.DisplayNameFor(model => model.IsDeleted)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.StatusTitle)</td>
                <td>@Html.DisplayFor(modelItem => item.StatusDescription)</td>
                 <td>@Html.DisplayFor(modelItem => item.StatusOrder)</td>         
                <td>@Html.DisplayFor(modelItem => item.IsCompleted)</td>
                <td>@Html.DisplayFor(modelItem => item.IsDeleted)</td>
                <td>
                   <a asp-controller="Status" asp-action="Update" asp-route-id="@item.StatusId"
                   data-ajax-complete="onComplete" data-ajax="true" class="btn btn-primary"
                   data-ajax-mode="replace" data-ajax-update="#UpdateContentDiv">Update</a>
                 
                   <a asp-controller="Status" asp-action="Delete"  asp-route-id="@item.StatusId"     
                   data-ajax-complete="onComplete" data-ajax="true" class="btn btn-primary"
                   data-ajax-mode="replace" data-ajax-update="#UpdateContentDiv">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


