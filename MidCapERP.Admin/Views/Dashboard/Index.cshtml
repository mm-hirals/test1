@{
    ViewData["Title"] = "Dashboard";
}

<div class="row">
    <div class="col-md-3">
        <a asp-action="Index" asp-controller="Order">
            <div class="dashboard-card d-flex justify-content-between p-3 rounded align-items-start">
                <div>
                    <h6 class="mb-3 font-size-16 text-white text-uppercase pt-2 fw-bold">Orders</h6>
                    <h2 class="mb-0 text-white pt-1">@ViewBag.OrderCount</h2>
                </div>
                <div>
                    <i class='bx bx-cube dashboard-icon'></i>
                </div>
            </div>
        </a>
    </div>

    <div class="col-md-3">
        <a asp-action="Index" asp-controller="Customer">
            <div class="dashboard-card d-flex justify-content-between p-3 rounded align-items-start">
                <div>
                    <h6 class="mb-3 font-size-16 text-white text-uppercase pt-2 fw-bold">Customers</h6>
                    <h2 class="mb-0 text-white pt-1">@ViewBag.CustomerCount</h2>
                </div>
                <div>
                    <i class='bx bx-user-circle dashboard-icon'></i>
                </div>
            </div>
        </a>
    </div>

    <div class="col-md-3">
        <a asp-action="Index" asp-controller="Interior">
            <div class="dashboard-card d-flex justify-content-between p-3 rounded align-items-start">
                <div>
                    <h6 class="mb-3 font-size-16 text-white text-uppercase pt-2 fw-bold">Interiors</h6>
                    <h2 class="mb-0 text-white pt-1">@ViewBag.InteriorCount</h2>
                </div>
                <div>
                    <i class='bx bx-grid-alt dashboard-icon'></i>
                </div>
            </div>
        </a>
    </div>

    <div class="col-md-3 ">
        <a asp-action="Index" asp-controller="Product">
            <div class="dashboard-card d-flex justify-content-between p-3 rounded align-items-start">
                <div>
                    <h6 class="mb-3 font-size-16 text-white text-uppercase pt-2 fw-bold">Products</h6>
                    <h2 class="mb-0 text-white pt-1">@ViewBag.ProductCount</h2>
                </div>
                <div>
                    <i class='bx bxl-product-hunt dashboard-icon'></i>
                </div>
            </div>
        </a>
    </div>
</div>
<div class="row mt-3 mb-3">
    <div class="col-md-9">
        <div class="c-card--wrapper">
            <div class="c-card--header">
                <h4 class="c-card--header-title">Orders Analytics</h4>
            </div>
            <div class="c-card--body">
                <canvas id="myChart" width="800px" height="200px" class="dashboard-canvas"></canvas>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="Recent-order-box c-card--wrapper h-100">
            <div class="c-card--header">
                <h4 class="c-card--header-title">Recent Orders</h4>
            </div>
            <div class="c-card--body">
                <canvas id="myCharts" width="100%" class="dashboard-canvas"></canvas>
                <div class="py-3 pb-0">

                    <div class="d-flex align-items-center">
                        <div class="recent-avtar me-3 d-flex justify-content-center align-items-center">
                            <i class='bx bx-check'></i>
                        </div>
                        <div class="dash-titles pt-1">
                            <h6>Delivered Orders</h6>
                        </div>
                        <div class=" ms-auto my-auto">
                            <h6 class="recent-box-right mb-0">1,575</h6>
                        </div>
                    </div>
                    <div class="d-flex mt-2 align-items-center">
                        <div class="recent-avtar-danger me-3 d-flex justify-content-center align-items-center">
                            <i class='bx bx-x'></i>
                        </div>
                        <div class="dash-titles pt-1">
                            <h6>Cancelled Orders</h6>
                        </div>
                        <div class=" ms-auto my-auto">
                            <h6 class="recent-box-right mb-0">100</h6>
                        </div>
                    </div>
                </div>
            </div>


        </div>

    </div>
</div>

<div class="c-card--wrapper p-0">
    <div class="c-card--header">
        <h4 class="c-card--header-title">Orders</h4>
    </div>
    <div class="c-card--body">
        <partial name="~/Views/Order/_OrderTable.cshtml" />
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        await Html.RenderPartialAsync("_JqueryDatatableScriptsPartial");
        <script asp-src-include="~/js/Order.js"></script>
    }
    }
    <script asp-src-include="~/js/chart.js"></script>